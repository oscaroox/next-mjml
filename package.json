{
  "name": "next-mjml",
  "version": "1.2.0",
  "description": "Mjml plugin for Next.js",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "jest",
    "build": "rimraf dist && tsup"
  },
  "keywords": [
    "next.js",
    "nextjs",
    "mjml",
    "email",
    "templates",
    "plugin",
    "parsing",
    "next.config.js",
    "open-source",
    "MIT"
  ],
  "author": "oscar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oscaroox/next-mjml.git"
  },
  "bugs": {
    "url": "https://github.com/oscaroox/next-mjml/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@types/jest": "^29.5.3",
    "@types/loader-utils": "^2.0.3",
    "@types/mjml": "^4.7.1",
    "babel-jest": "^29.6.1",
    "jest": "^29.6.1",
    "memfs": "^4.2.0",
    "mjml": "^4",
    "next": "^13",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2"
  },
  "dependencies": {
    "loader-utils": "^3.2.1"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/loader.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "format": [
      "cjs",
      "esm"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "*"
      ]
    }
  },
  "peerDependencies": {
    "mjml": "^4",
    "next": "^13"
  }
}
